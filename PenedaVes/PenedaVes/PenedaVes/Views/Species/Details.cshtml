@model PenedaVes.Models.Species

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var basePath = Context.Request.PathBase;
}

<h1>Detalhes</h1>

<div>
    <h4>Espécie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScientificName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScientificName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPredatory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPredatory)
        </dd>
        <dt class = "col-sm-2">
            Imagem
        </dt>
        <dd class = "col-sm-10">
            @if (!String.IsNullOrEmpty(Model.Image))
            {
                var imagePath = $"{basePath}/Image/{Model.Image}";
                <img src="@imagePath"  alt="Image did not render" width="256px" height="256px"/>
            }

        </dd>
    </dl>
</div>
<div>
                
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit |</a> 
    }
    <a asp-action="Index"> Voltar à listagem</a>
</div>
